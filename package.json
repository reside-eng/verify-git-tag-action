{
  "name": "verify-git-tag-action",
  "version": "0.0.0",
  "description": "Github Action for verifying if a Git tag exists in a target repository",
  "main": "dist/index.js",
  "engines": {
    "node": ">=10.15.0"
  },
  "scripts": {
    "build": "rimraf dist && ncc build src/index.ts",
    "lint": "eslint . --ignore-pattern='!.eslintrc.js' --ext .ts,.js",
    "test": "echo no tests yet"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/reside-eng/verify-git-tag-action"
  },
  "keywords": [
    "actions",
    "git",
    "git tag"
  ],
  "author": "Side",
  "license": "MIT",
  "private": false,
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged && npm run build && git add dist"
    }
  },
  "lint-staged": {
    "*.{json,md}": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "9.0.1",
    "@side/commitlint-config": "0.1.1",
    "@side/eslint-config-base": "0.9.1",
    "@side/eslint-config-jest": "0.2.1",
    "@types/fs-extra": "9.0.1",
    "@types/node": "14.0.14",
    "@typescript-eslint/eslint-plugin": "3.4.0",
    "@typescript-eslint/parser": "3.4.0",
    "@zeit/ncc": "0.22.3",
    "eslint": "7.3.1",
    "eslint-plugin-jsdoc": "28.5.1",
    "husky": "4.2.5",
    "lint-staged": "10.2.11",
    "prettier": "2.0.5",
    "rimraf": "3.0.2",
    "typescript": "3.9.5"
  },
  "dependencies": {
    "@actions/core": "1.2.4",
    "@actions/github": "3.0.0",
    "fs-extra": "9.0.1",
    "remote-git-tags": "3.0.0"
  }
}
