{
  "name": "verify-git-tag-action",
  "version": "0.0.0-development",
  "description": "Github Action for verifying if a Git tag exists in a target repository",
  "main": "dist/index.js",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "prepare": "husky install",
    "build": "rimraf dist && ncc build src/index.ts && ts-node bin/generate-docs.ts",
    "lint": "eslint . --ignore-pattern='!.eslintrc.js' --ext .ts,.js",
    "test": "yarn tsc && jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/reside-eng/verify-git-tag-action"
  },
  "keywords": [
    "actions",
    "git",
    "git tag"
  ],
  "author": "Side",
  "license": "MIT",
  "private": false,
  "lint-staged": {
    "*.{json,md}": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@actions/exec": "1.0.4",
    "@commitlint/cli": "12.1.4",
    "@side/commitlint-config": "0.1.4",
    "@side/eslint-config-base": "0.11.4",
    "@side/eslint-config-jest": "0.3.8",
    "@tsconfig/node14": "1.0.0",
    "@types/fs-extra": "9.0.11",
    "@types/jest": "26.0.23",
    "@types/js-yaml": "4.0.1",
    "@types/node": "15.6.1",
    "@typescript-eslint/eslint-plugin": "4.25.0",
    "@typescript-eslint/parser": "4.25.0",
    "@vercel/ncc": "0.28.6",
    "eslint": "7.27.0",
    "eslint-plugin-jsdoc": "35.0.0",
    "husky": "6.0.0",
    "jest": "27.0.1",
    "js-yaml": "4.1.0",
    "lint-staged": "11.0.0",
    "prettier": "2.3.0",
    "rimraf": "3.0.2",
    "ts-jest": "26.5.6",
    "ts-node": "10.0.0",
    "typescript": "4.3.2"
  },
  "dependencies": {
    "@actions/core": "1.2.7",
    "@actions/github": "5.0.0",
    "fs-extra": "10.0.0",
    "remote-git-tags": "3.0.0"
  }
}
