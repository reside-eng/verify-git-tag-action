{
  "name": "verify-git-tag-action",
  "version": "0.0.0-development",
  "description": "Github Action for verifying if a Git tag exists in a target repository",
  "main": "dist/index.js",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "prepare": "husky install",
    "build:docs": "ts-node bin/generate-docs.ts && prettier --write README.md",
    "build": "rimraf dist && ncc build src/index.ts && yarn build:docs",
    "lint": "eslint . --ignore-pattern='!.eslintrc.js' --ext .ts,.js",
    "test": "yarn tsc && jest",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@actions/core": "1.10.0",
    "@actions/github": "5.1.1",
    "fs-extra": "10.1.0",
    "remote-git-tags": "3.0.0"
  },
  "devDependencies": {
    "@actions/exec": "1.1.1",
    "@commitlint/cli": "17.6.6",
    "@side/commitlint-config": "1.0.0",
    "@side/eslint-config-base": "1.0.0",
    "@side/eslint-config-jest": "1.0.0",
    "@side/prettier-config": "1.0.0",
    "@tsconfig/node16": "1.0.3",
    "@types/fs-extra": "9.0.13",
    "@types/jest": "29.5.2",
    "@types/js-yaml": "4.0.5",
    "@types/node": "16.18.27",
    "@typescript-eslint/eslint-plugin": "5.60.1",
    "@typescript-eslint/parser": "5.60.1",
    "@vercel/ncc": "0.36.1",
    "eslint": "8.39.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-jsdoc": "46.4.3",
    "husky": "8.0.3",
    "jest": "29.6.1",
    "js-yaml": "4.1.0",
    "lint-staged": "13.2.3",
    "prettier": "2.8.8",
    "rimraf": "5.0.1",
    "ts-jest": "29.1.0",
    "ts-node": "10.9.1",
    "typescript": "5.1.6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/reside-eng/verify-git-tag-action"
  },
  "keywords": [
    "actions",
    "git",
    "git tag"
  ],
  "author": "Side",
  "license": "MIT",
  "private": false,
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix"
    ],
    "*.{js,jsx,ts,tsx,yaml,yml,json,html,css,md}": [
      "prettier --write"
    ]
  },
  "prettier": "@side/prettier-config"
}
